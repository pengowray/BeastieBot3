# Copy this file to .env and fill in your production credentials.
# Values defined here are loaded into process environment variables at runtime.

# Required bearer token for https://api.iucnredlist.org requests.
IUCN_API_TOKEN=replace-with-your-token

# Optional overrides. Defaults are shown below and may be safely removed.
IUCN_API_BASE_URL=https://api.iucnredlist.org
IUCN_API_TIMEOUT_SECONDS=120
IUCN_API_MAX_CONCURRENCY=1

# Wikidata read-only configuration.
WIKIDATA_USER_AGENT=BeastieBot3/1.0 (+https://github.com/pengowray/BeastieBot3)
WIKIDATA_REQUEST_DELAY_MS=500
WIKIDATA_SPARQL_DELAY_MS=1000
WIKIDATA_SPARQL_BATCH_SIZE=500
